<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="Device Wifi SSID"
        android:key="deviceWifiSsid"
        android:summary="Please provide device wifi SSID"
        android:defaultValue="ESPAP">
    </EditTextPreference>
    <ListPreference android:title="Device Wifi Mode"
        android:summary="Select the Wifi mode"
        android:key="wifiNetworkMode"
        android:defaultValue="softap"
        android:entries="@array/listArrayWifiModes"
        android:entryValues="@array/listValuesWifiModes" />
    <ListPreference android:title="Wifi Network"
        android:summary="Select the Wifi network"
        android:key="wifiNetwork"
        android:defaultValue="test-ssid"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />
    <EditTextPreference android:title="Wifi Password"
        android:key="wifiPassword"
        android:summary="Please provide password for the selected Wifi"></EditTextPreference>
</PreferenceScreen>